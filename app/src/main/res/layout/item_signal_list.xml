<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/PX180"
    android:layout_marginBottom="@dimen/PX3"
    android:background="@color/table_title"
    android:orientation="horizontal"
    android:padding="@dimen/PX20">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/PX230"
        android:layout_height="match_parent"
        android:background="@color/content"
        android:gravity="center"
        android:text="ERRC"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        style="@style/Horizontal_0M1"
        android:layout_marginLeft="@dimen/PX50"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Vertical_M01"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX30"
                android:src="@mipmap/icon_up" />

            <ImageView
                android:id="@+id/img_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/PX30"
                android:src="@mipmap/icon_down" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/Horizontal_0M1"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/EARFCN"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            style="@style/LabelText"
            android:gravity="center_vertical"
            android:text="2018-06-12 12:23:23"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
