<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_return" />

    <RelativeLayout
        android:id="@+id/rl_net"
        android:layout_width="match_parent"
        android:layout_height="@dimen/PX130"
        android:layout_marginTop="@dimen/PX30"
        android:background="@drawable/bg_btn_light_dark_selector"
        android:paddingLeft="@dimen/PX30"
        android:paddingRight="@dimen/PX30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lock_net"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_lock_net"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/PX30"
            android:drawableRight="@mipmap/icon_arrow"
            android:gravity="center"
            android:text="@string/undefine"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_band"
        android:layout_width="match_parent"
        android:layout_height="@dimen/PX130"
        android:layout_marginTop="@dimen/PX3"
        android:background="@drawable/bg_btn_light_dark_selector"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/PX30"
        android:paddingRight="@dimen/PX30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lock_band"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_lock_band"
            style="@style/Horizontal_0M1"
            android:drawablePadding="@dimen/PX30"
            android:drawableRight="@mipmap/icon_arrow"
            android:gravity="right|center_vertical"
            android:paddingLeft="@dimen/PX30"
            android:text="@string/undefine"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_earfcn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/PX130"
        android:layout_marginTop="@dimen/PX3"
        android:background="@drawable/bg_btn_light_dark_selector"
        android:paddingLeft="@dimen/PX30"
        android:paddingRight="@dimen/PX30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lock_earfcn"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_lock_earfcn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/PX30"
            android:drawableRight="@mipmap/icon_arrow"
            android:gravity="center"
            android:text="@string/undefine"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pci"
        android:layout_width="match_parent"
        android:layout_height="@dimen/PX130"
        android:layout_marginTop="@dimen/PX3"
        android:background="@drawable/bg_btn_light_dark_selector"
        android:paddingLeft="@dimen/PX30"
        android:paddingRight="@dimen/PX30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lock_pci"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_lock_pci"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/PX30"
            android:drawableRight="@mipmap/icon_arrow"
            android:gravity="center"
            android:text="@string/undefine"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/PX200">

        <Button
            android:id="@+id/btn_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/PX130"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_btn_light_dark_selector"
            android:text="@string/default_set"
            android:textColor="@color/line" />
    </RelativeLayout>
</LinearLayout>
