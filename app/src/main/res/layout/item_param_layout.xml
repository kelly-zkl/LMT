<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/PX30"
    android:background="@color/content"
    android:orientation="vertical"
    android:padding="@dimen/PX50">

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/line_blue_shape"
        android:drawablePadding="@dimen/PX30"
        android:text="37900-38950"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PX40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_ploy"
            style="@style/Horizontal_0M1"
            android:layout_marginRight="@dimen/PX50"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="从37900到38950的重选策略"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_value_ploy"
            style="@style/Horizontal_0M1"
            android:gravity="center_vertical"
            android:text="@string/undefine"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Horizontal_0M1"
            android:layout_marginRight="@dimen/PX50"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="@string/high_level"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_value_high"
            style="@style/Horizontal_0M1"
            android:gravity="center_vertical"
            android:text="@string/undefine"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_equal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Horizontal_0M1"
            android:layout_marginRight="@dimen/PX50"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="@string/max_level"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_value_max"
            style="@style/Horizontal_0M1"
            android:gravity="center_vertical"
            android:text="@string/undefine"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Horizontal_0M1"
            android:layout_marginRight="@dimen/PX50"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="@string/low_level"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_value_low"
            style="@style/Horizontal_0M1"
            android:gravity="center_vertical"
            android:text="@string/undefine"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_gravity"
            style="@style/Horizontal_0M1"
            android:layout_marginRight="@dimen/PX50"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="38950的重选优先级"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_value_gravity"
            style="@style/Horizontal_0M1"
            android:gravity="center_vertical"
            android:text="@string/undefine"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
