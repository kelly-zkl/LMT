<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/PX30"
        android:background="@color/content"
        android:orientation="vertical"
        android:padding="@dimen/PX50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/line_blue_shape"
            android:drawablePadding="@dimen/PX30"
            android:text="@string/service_village"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PX40"
            android:orientation="horizontal">

            <TextView
                style="@style/Horizontal_0M1"
                android:layout_marginRight="@dimen/PX50"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="@string/min_dian"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/tv_service_lev"
                style="@style/Horizontal_0M1"
                android:gravity="center_vertical"
                android:text="@string/undefine"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Horizontal_0M1"
                android:layout_marginRight="@dimen/PX50"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="@string/max_tongpin"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/tv_value_tong"
                style="@style/Horizontal_0M1"
                android:gravity="center_vertical"
                android:text="@string/undefine"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Horizontal_0M1"
                android:layout_marginRight="@dimen/PX50"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="@string/max_yipin"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/tv_value_yi"
                style="@style/Horizontal_0M1"
                android:gravity="center_vertical"
                android:text="@string/undefine"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Horizontal_0M1"
                android:layout_marginRight="@dimen/PX50"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="@string/max_level"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/tv_value_ploy"
                style="@style/Horizontal_0M1"
                android:gravity="center_vertical"
                android:text="@string/undefine"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Horizontal_0M1"
                android:layout_marginRight="@dimen/PX50"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="@string/max_pindian"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/tv_value_gravity"
                style="@style/Horizontal_0M1"
                android:gravity="center_vertical"
                android:text="@string/undefine"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
