<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/PX100"
    android:background="@color/background"
    android:orientation="horizontal">


    <RelativeLayout style="@style/Horizontal_0M1">

        <TextView
            android:id="@+id/tv_s"
            android:layout_width="@dimen/PX50"
            android:layout_height="@dimen/PX50"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_green_corner_shape"
            android:gravity="center"
            android:text="@string/S"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24" />

        <TextView
            android:id="@+id/tv_n"
            android:layout_width="@dimen/PX50"
            android:layout_height="@dimen/PX50"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_blue_corner_shape"
            android:gravity="center"
            android:text="@string/N"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_band"
        style="@style/Horizontal_0M1"
        android:gravity="center_vertical"
        android:text="@string/band"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_earfcn"
        style="@style/Horizontal_0M1"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:text="@string/EARFCN"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_pci"
        style="@style/Horizontal_0M1"
        android:gravity="center_vertical"
        android:text="@string/PCI"
        android:textColor="@color/white" />

    <com.wisec.scanner.customview.ProgressView
        android:id="@+id/pb_rsrp"
        style="@style/CommonProgress"
        android:layout_width="0dp"
        android:layout_height="@dimen/PX55"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/PX20"
        android:layout_weight="2"
        app:set_progress_max="100"
        app:title_text_color="@color/white" />

    <com.wisec.scanner.customview.ProgressView
        android:id="@+id/pb_rsrq"
        style="@style/CommonProgress"
        android:layout_width="0dp"
        android:layout_height="@dimen/PX55"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/PX20"
        android:layout_weight="2"
        app:set_progress_max="100"
        app:title_text_color="@color/white" />
</LinearLayout>
